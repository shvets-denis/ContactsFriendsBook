<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/heightTopToolBar"
    android:background="@color/colorBeige"
    android:orientation="vertical"
    tools:context=".ContactListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/buttonViewLogo"
            android:layout_width="@dimen/sizeLogoTopToolBar"
            android:layout_height="@dimen/sizeLogoTopToolBar"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/marginLeftTitleTopToolBar"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/app_name"
            android:textSize="@dimen/sizeTextTopToolBar" />
    </LinearLayout>

    <ImageView
        android:id="@+id/buttonViewBack"
        android:layout_width="@dimen/sizeItemTopToolBar"
        android:layout_height="@dimen/sizeItemTopToolBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/marginItemTopToolBar"
        android:src="@mipmap/back_user_ic"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/buttonViewRight"
        android:layout_width="@dimen/sizeItemTopToolBar"
        android:layout_height="@dimen/sizeItemTopToolBar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/marginItemTopToolBar"
        android:src="@mipmap/add_user_ic" />

</RelativeLayout>